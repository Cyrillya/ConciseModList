ModsOpenConfig: "[c/CC88AA:Right click] to open config"
ModsMoreInfo: "[c/CC88AA:Press Ctrl] to see more info"
Delete: "[c/CC88AA:Right click] to delete the mod"
Dependencies: "[c/CC88AA:Middle click] to enable dependencies"
ExportEnabledMods:
	'''
	Left click to export a list of enabled mods as text
	Right click to export without steam workshop links
	'''

Configs: {
	ConciseModConfig: {
		DisplayName: Config

		ConfigButton: {
			Label: Config Button
			Tooltip: You can still right click a mod icon to open config when this is off
		}

		SteamIcon: {
			Label: Steam Icon
			Tooltip: If a mod is from steam workshop, the steam icon will appear on the mod icon
		}

		UpdateDot: {
			Label: Update Dot
			Tooltip: The dot that will appear on the mod icon when the mod is updated
		}

		ObsidianSkull: {
			Label: Obsidian Skull
			Tooltip: The skull indicating that there is no preview build for this mod
		}

		PurpleBackground: {
			Label: Purple Background for Local Mods
			Tooltip: If a mod is not from steam workshop, its background will be purple
		}

		ModReferenceIcon: {
			Label: Mod Reference Icon
			Tooltip: The icon indicating that this mod has dependencies
		}

		TranslationModIcon: {
			Label: Translation Mod Icon
			Tooltip: The icon indicating that this mod translates other mods
		}
	}
}
